---
import Icon from 'astro-icon';

const reasons = [
  {
    svg: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M12 20a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm1-13v4.27l3.11 1.84-.76 1.23L12 12V7h1Z"/></svg>`,
    title: "Compromiso y Puntualidad",
    description: "Cumplimos con los plazos establecidos en cada proyecto"
  },
  {
    svg: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M17 3H7a2 2 0 0 0-2 2v14l7-3 7 3V5a2 2 0 0 0-2-2Z"/></svg>`,
    title: "Materiales de Calidad",
    description: "Trabajamos solo con los mejores materiales del mercado"
  },
  {
    svg: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M12 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm6 14v-2a4 4 0 0 0-4-4H10a4 4 0 0 0-4 4v2h12Zm4-7v2h-2v2h-2v-2h-2v-2h2V10h2v2h2Zm-5-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z"/></svg>`,
    title: "Personal Capacitado",
    description: "Equipo profesional con amplia experiencia"
  },
  {
    svg: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M17 17v-2h-2v-2h-2v2h-2v2h-2v2h2v2h2v-2h2v-2h2Zm-5-8a2 2 0 1 1 0-4 2 2 0 0 1 0 4ZM5 21v-1a4 4 0 0 1 4-4h2.1a5.96 5.96 0 0 1-.1-1 6 6 0 1 1 6 6H5Z"/></svg>`,
    title: "15 Años de Experiencia",
    description: "Trayectoria comprobada en el mercado hondureño"
  },
  {
    svg: `<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M19 6.41 17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12Z"/></svg>`,
    title: "Atención Personalizada",
    description: "Servicio adaptado a las necesidades de cada cliente"
  }
];

---
<section class="py-20 bg-gradient-to-b from-white to-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16" data-aos="fade-up">
      Por Qué <span class="text-jad-red">Elegirnos</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {reasons.map((reason, index) => (
        <div class="text-center p-6 bg-white rounded-lg shadow-md" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="w-16 h-16 mx-auto mb-4 text-jad-red" set:html={reason.svg}></div>
          <h3 class="text-lg font-semibold mb-2">{reason.title}</h3>
          <p class="text-gray-600">{reason.description}</p>
        </div>
      ))}
      
    </div>
  </div>
</section>